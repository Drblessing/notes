# SSH Client Configuration

# GitHub SSH Access
Host github
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes

# Personal Server 
Host personal-server
    HostName example.com
    User daniel
    Port 22
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes

# Work Server 
Host work-server
    HostName work.example.com
    User daniel
    Port 22
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes

# Media Server
Host media-server
    HostName 192.168.7.57
    User drblessing
    Port 22
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes
